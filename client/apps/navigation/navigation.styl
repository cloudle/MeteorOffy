@import '../../styles/global.import.styl'

nav.fixed-top
  background-color #ffffff
  margin-left side-menu-size + side-list-size
  border-bottom solid 1px #eeeeee

#list-nav
  width side-list-size

#global-search
  position relative
  margin-left 8px

  .search-icon
    absolute top -1px left 5px
    font-size 20px; color #b6b6b6
    &:before
      border-right solid 1px #e7e7e7
      padding-right 3px

  input
    width 200px
    border solid 1px #e7e7e7
    box-shadow inset 0 0 1px 1px rgba(0,0,0,0.02)
    padding 5px 10px 5px 38px; border-radius 3px
    font-size 16px
    color #8B8888 //#cccccc
    &:hover
      border-color #e0e0e0
    &:focus
      border-color #d0d0d0
